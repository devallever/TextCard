<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="5dp">

    <View
        android:id="@+id/viewColorBg"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/shape_google_blue_r45_ring"
        android:padding="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.text.card.ui.widget.GradientCircleView
        android:id="@+id/gradientCircleView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        tools:background="@drawable/shape_google_blue_r45"
        app:layout_constraintBottom_toBottomOf="@+id/viewColorBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewColorBg" />

</androidx.constraintlayout.widget.ConstraintLayout>